@{
	var treeList = Html.DevExpress().TreeList(settings => {
        settings.Name = "DoiTuongTreeList";
        settings.CallbackRouteValues = new { Controller = "TKDoiTuong", Action = "DoiTuongTree" };

				settings.SettingsEditing.AddNewNodeRouteValues = new { Controller = "TKDoiTuong", Action = "DoiTuongTreeAddNew" };
        settings.SettingsEditing.UpdateNodeRouteValues = new { Controller = "TKDoiTuong", Action = "DoiTuongTreeUpdate" };
        settings.SettingsEditing.DeleteNodeRouteValues = new { Controller = "TKDoiTuong", Action = "DoiTuongTreeDelete" };
				settings.SettingsEditing.NodeDragDropRouteValues = new { Controller = "TKDoiTuong", Action = "DoiTuongTreeMove" };

		settings.CommandColumn.Visible = true;
        settings.CommandColumn.NewButton.Visible = true;
        settings.CommandColumn.DeleteButton.Visible = true;
        settings.CommandColumn.EditButton.Visible = true;

				settings.KeyFieldName = "DoiTuong_Id";
		settings.ParentFieldName = "DoiTuong_ParentId";
				settings.Columns.Add(
            column => {
                column.FieldName = "TenDoiTuong";
            }
        );
				settings.Columns.Add(
            column => {
                column.FieldName = "Nhom_Id";
            }
        );

		settings.SettingsPager.Visible = true;
		settings.SettingsSelection.Enabled = true;
	});
		if (ViewData["EditError"] != null){
        treeList.SetEditErrorText((string)ViewData["EditError"]);
    }
}
@treeList.Bind(Model).GetHtml()