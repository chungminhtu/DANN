@{
    var grid = Html.DevExpress().GridView(settings =>
    {
        settings.Name = "GridView2";
        settings.CallbackRouteValues = new { Controller = "DanhMucNghiepVu", Action = "GridView2Partial" };
        settings.Width = Unit.Percentage(100);
        settings.SettingsEditing.AddNewRowRouteValues = new { Controller = "DanhMucNghiepVu", Action = "GridView2PartialAddNew" };
        settings.SettingsEditing.UpdateRowRouteValues = new { Controller = "DanhMucNghiepVu", Action = "GridView2PartialUpdate" };
        settings.SettingsEditing.DeleteRowRouteValues = new { Controller = "DanhMucNghiepVu", Action = "GridView2PartialDelete" };
        settings.SettingsEditing.Mode = GridViewEditingMode.EditFormAndDisplayRow;
        settings.SettingsBehavior.ConfirmDelete = true;

        settings.CommandColumn.Visible = true;
        settings.CommandColumn.ShowNewButton = true;
        settings.CommandColumn.ShowDeleteButton = true;
        settings.CommandColumn.ShowEditButton = true;

        settings.SettingsCommandButton.DeleteButton.Text = "Xóa";
        settings.SettingsCommandButton.NewButton.Text = "Thêm mới";
        settings.SettingsCommandButton.EditButton.Text = "Sửa";
        settings.SettingsCommandButton.UpdateButton.Text = "Lưu lại";

        settings.KeyFieldName = "MaNghiepVu";

        settings.SettingsPager.Visible = true;
        //settings.Settings.ShowGroupPanel = true;
        settings.Settings.ShowFilterRow = true;
        settings.Settings.ShowFilterRowMenu = true;
        settings.SettingsBehavior.AllowSelectByRowClick = true;

        settings.Columns.Add(column =>
        {
            column.FieldName = "TenNghiepVu";
            column.Width = Unit.Percentage(30);
            column.Caption = "Tên bảng nghiệp vụ";
            column.HeaderStyle.HorizontalAlign = HorizontalAlign.Center;
        });

        settings.Columns.Add(column =>
        {
            column.FieldName = "MoTa";
            column.Width = Unit.Percentage(80);
            column.Caption = "Mô tả";
            column.HeaderStyle.HorizontalAlign = HorizontalAlign.Center;
        });
        
    });
    if (ViewData["EditError"] != null)
    {
        grid.SetEditErrorText((string)ViewData["EditError"]);
    }
}
@grid.Bind(Model).GetHtml()