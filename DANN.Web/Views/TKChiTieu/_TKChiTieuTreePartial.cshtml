@{
	var treeList = Html.DevExpress().TreeList(settings => {
        settings.Name = "TKChiTieuTree";
        settings.CallbackRouteValues = new { Controller = "TKChiTieu", Action = "TKChiTieuTreePartial" };

				settings.SettingsEditing.AddNewNodeRouteValues = new { Controller = "TKChiTieu", Action = "TKChiTieuTreePartialAddNew" };
        settings.SettingsEditing.UpdateNodeRouteValues = new { Controller = "TKChiTieu", Action = "TKChiTieuTreePartialUpdate" };
        settings.SettingsEditing.DeleteNodeRouteValues = new { Controller = "TKChiTieu", Action = "TKChiTieuTreePartialDelete" };
				settings.SettingsEditing.NodeDragDropRouteValues = new { Controller = "TKChiTieu", Action = "TKChiTieuTreePartialMove" };

		settings.CommandColumn.Visible = true;
        settings.CommandColumn.NewButton.Visible = true;
        settings.CommandColumn.DeleteButton.Visible = true;
        settings.CommandColumn.EditButton.Visible = true;

				settings.KeyFieldName = "ChiTieu_Id";
		settings.ParentFieldName = "ChiTieu_ParentId";
				settings.Columns.Add(
            column => {
                column.FieldName = "TenChiTieu";
            }
        );

		settings.SettingsPager.Visible = true;
		settings.SettingsSelection.Enabled = true;
	});
		if (ViewData["EditError"] != null){
        treeList.SetEditErrorText((string)ViewData["EditError"]);
    }
}
@treeList.Bind(Model).GetHtml()