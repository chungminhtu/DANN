@{
    var treeList = Html.DevExpress().TreeList(settings =>
    {
        settings.Name = "TreeList";
        settings.CallbackRouteValues = new { Controller = "ChiTieuNghiepVu", Action = "TreeListPartial" };

        settings.SettingsEditing.AddNewNodeRouteValues = new { Controller = "ChiTieuNghiepVu", Action = "TreeListPartialAddNew" };
        settings.SettingsEditing.UpdateNodeRouteValues = new { Controller = "ChiTieuNghiepVu", Action = "TreeListPartialUpdate" };
        settings.SettingsEditing.DeleteNodeRouteValues = new { Controller = "ChiTieuNghiepVu", Action = "TreeListPartialDelete" };
        settings.SettingsEditing.NodeDragDropRouteValues = new { Controller = "ChiTieuNghiepVu", Action = "TreeListPartialMove" };

        settings.CommandColumn.Visible = true;
        settings.CommandColumn.NewButton.Visible = true;
        settings.CommandColumn.DeleteButton.Visible = true;
        settings.CommandColumn.EditButton.Visible = true;
      
        settings.AutoGenerateColumns = true;

        settings.KeyFieldName = "MaChiTieu";
        settings.ParentFieldName = "MaChiTieuCha";
        settings.Columns.Add(
    column =>
    {
        column.FieldName = "MaNghiepVu";
    }
);
        settings.Columns.Add(
    column =>
    {
        column.FieldName = "MaChiTieu";
    }
);
        settings.Columns.Add(
    column =>
    {
        column.FieldName = "MaChiTieuCha";
    }
);
        settings.Columns.Add(
    column =>
    {
        column.FieldName = "TenChiTieu";
    }
);

        settings.SettingsPager.Visible = true;
        settings.SettingsSelection.Enabled = true;
    });
    if (ViewData["EditError"] != null)
    {
        treeList.SetEditErrorText((string)ViewData["EditError"]);
    }
}
@treeList.Bind(Model).GetHtml()