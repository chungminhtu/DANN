@{
	var grid = Html.DevExpress().GridView(settings => {
        settings.Name = "DonViTinhGridView";
        settings.CallbackRouteValues = new { Controller = "DMDonViTinh", Action = "DonViTinhGrid" };
        settings.SettingsEditing.AddNewRowRouteValues = new { Controller = "DMDonViTinh", Action = "DonViTinhGridAddNew" };
        settings.SettingsEditing.UpdateRowRouteValues = new { Controller = "DMDonViTinh", Action = "DonViTinhGridUpdate" };
        settings.SettingsEditing.DeleteRowRouteValues = new { Controller = "DMDonViTinh", Action = "DonViTinhGridDelete" };
   
         
        //Settings 
        settings.SettingsEditing.Mode = GridViewEditingMode.Inline;
        settings.SettingsBehavior.ConfirmDelete = true;
        settings.SettingsPager.PageSizeItemSettings.Visible = true;
        settings.SettingsPager.PageSizeItemSettings.Items = new string[] { "15", "25", "50" };
        settings.SettingsPager.PageSize = 25;

        // settings.SettingsBehavior.AllowSelectByRowClick = true;
        settings.SettingsBehavior.AllowSelectSingleRowOnly = true;
        settings.SettingsBehavior.AllowFocusedRow = true;
