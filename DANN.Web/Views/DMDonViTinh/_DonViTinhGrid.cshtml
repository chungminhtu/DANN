        settings.ClientSideEvents.ContextMenu = "ShowGridContextMenu1";
        settings.ClientSideEvents.RowClick = "function (s, e){ currentControlType = 'Grid';currentControl = DonViTinhGridView ; }";
        
        
		settings.KeyFieldName = "DonViTinh_Id";
         
		settings.SettingsBehavior.AllowSelectByRowClick = true;

				settings.Columns.Add("TenDonViTinh");
				settings.Columns.Add("LoaiDonViTinh");
				settings.Columns.Add("ValueFormat");
			});
